liste = []

def ekle():
    yapilacak = input("eklemek istediginiz gorevi giriniz")
    liste.append(yapilacak)
def goster():
    print(liste)
def sil():
    kald覺r = input("kald覺rmak istediginiz gorevi giriniz")
    if kald覺r in liste:
        liste.remove(kald覺r)
while True:
    print("""
    1) bir gorev ekleyin
    2) gorevleri listeleyin
    3) bir gorevi silin
    """)
    secim = input("seciminiz")
    if secim=="1":
        ekle()
    elif secim=="2":
        goster()
    elif secim=="3":
        sil()
